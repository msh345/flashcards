<h1>Sign Up</h1>

<div id="error_msg"><%= @error if @error %></div>

<form action="/gamehome" method="POST">
  <label for="username">User Name</label>
  <input id="username" type="text" name="new_user[username]"><br>
  <label for="email">Email</label>
  <input id="email" type="email" name="new_user[email]"><br>
  <label for="password">Password</label>
  <input id="password" type="password" name="new_user[password]"><br>
  <label for="password_confirmation">Password Confirmation</label>
  <input id="password_confirmation" type="password" name="password_confirmation"><br>
  <input type="Submit">
</form>
